@model IEnumerable<DOAN2.Models.Lop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Lớp</h2>

<p>
    <a href="~/Lops/Create"><em class="fa fa-plus">&nbsp;</em>Thêm Mới</a>
</p>
<div>
    <form method="get">
        Tìm Kiếm:<input type="text" name="txtSearch" id="txtSearch" /><input type="submit" value="Tìm" />
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChuyenNganh.Khoa.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChuyenNganh.NameCN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeDaoTao.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NienKhoa.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChuyenNganh.Khoa.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChuyenNganh.NameCN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeDaoTao.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NienKhoa.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SS)
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
