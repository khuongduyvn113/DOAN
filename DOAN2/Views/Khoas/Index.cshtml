@model IEnumerable<DOAN2.Models.Khoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Khoa</h2>

<p>
    <a href="~/Khoas/Create"><em class="fa fa-plus">&nbsp;</em>Thêm Mới</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Tìm Kiếm:@Html.TextBox("SearchString")
        <input type="submit" value="Tìm"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Des)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Des)
            </td>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |

                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })


            </td>
        </tr>
    }

</table>
