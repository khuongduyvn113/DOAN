@model IEnumerable<DOAN2.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Quản Lý Sinh Viên</h2>

<p>
 <a href="~/SinhViens/Create"><em class="fa fa-plus">&nbsp;</em>Thêm Mới</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Lop.NameCN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Village)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lop.ChuyenNganh.Khoa.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lop.ChuyenNganh.NameCN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lop.HeDaoTao.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lop.NienKhoa.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.NameCN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Village)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.ChuyenNganh.Khoa.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.ChuyenNganh.NameCN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.HeDaoTao.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.NienKhoa.Name)
            </td>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |

                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }

</table>
