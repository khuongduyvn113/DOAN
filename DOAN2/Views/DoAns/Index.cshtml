@model IEnumerable<DOAN2.Models.DoAn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h2>Danh Sách Đồ Án</h2>
<p>
<a href="~/DoAns/Create"><em class="fa fa-plus">&nbsp;</em>Thêm Mới</a>
</p>
<div>
    <form method="get">
        Tìm Kiếm<input type="text" name="txtSearch" id="txtSearch" /><input type="submit" value="Tìm" />
    </form>
</div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MDA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Human)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Humans)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.Lop.NameCN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.Lop.ChuyenNganh.Khoa.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.Lop.ChuyenNganh.NameCN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
           
            <td>
                <img src="@item.Image" alt="Image" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MDA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Human)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Humans)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.Lop.NameCN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.Lop.ChuyenNganh.Khoa.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.Lop.ChuyenNganh.NameCN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
               @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |

                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
    
    </table>

